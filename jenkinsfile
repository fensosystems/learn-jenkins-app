pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh 'echo "without DOCKER"'
            }
        }
        stage('w/docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo 'with DOCKER'
                    ls -la 
                    node --version
                    npm --version
                    npm ci
                    npm run build 
                    ls -la
                '''
            }
        }
        stage('Testing-with-docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            steps {
                sh '''
                    echo "Test stage"
                    npm test
                    
                '''
            }
        }
    }
}